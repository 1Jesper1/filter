{
    "name": "joomla/controller",
    "type": "joomla-package",
    "description": "Joomla Controller Package",
    "keywords": ["joomla", "framework", "controller"],
    "homepage": "https://github.com/joomla-framework/controller",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^5.3.10|~7.0|^8.0",
        "joomla/application": "~1.0|~2.0",
        "joomla/input": "~1.0|~2.0"
    },
    "require-dev": {
        "joomla/coding-standards": "~2.0@alpha",
        "phpunit/phpunit": "^4.8.35|^5.4.3|~6.0"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Controller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Controller\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
